@model ITBusinessCase.Models.UserProfile
@{
    ViewData["Title"] = "Mijn profiel";
}

<h2 class="mb-3">Mijn profiel</h2>

@if (TempData["ProfileSaved"] != null)
{
    <div class="alert alert-success">@TempData["ProfileSaved"]</div>
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Voornaam</label>
                    <input class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Achternaam</label>
                    <input class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Land</label>
                    <input class="form-control" asp-for="Country" />
                </div>

                <div class="col-md-8">
                    <label class="form-label">Straat</label>
                    <input class="form-control" asp-for="Street" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Postbus</label>
                    <input class="form-control" asp-for="Postbus" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Stad</label>
                    <input class="form-control" asp-for="City" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Postcode</label>
                    <input class="form-control" asp-for="Postcode" />
                </div>
            </div>

            <button class="btn btn-primary mt-3" type="submit">Opslaan</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
