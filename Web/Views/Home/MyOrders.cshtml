@model List<Order>
@{
	ViewData["Title"] = "Mijn bestellingen";
}

<h2 class="mb-3">Mijn bestellingen</h2>

@if (Model.Count == 0) {
	<div class="alert alert-info">Je hebt nog geen bestellingen.</div>
} else {
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-striped align-middle mb-0">
					<thead>
						<tr>
							<th>OrderId</th>
							<th>Status</th>
							<th>Datum</th>
							<th class="text-end"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var o in Model) {
							<tr>
								<td style="max-width:260px; word-break:break-word;">@o.Id</td>
								<td>@o.Status</td>
								<td>@o.CreatedAt</td>
								<td class="text-end">
									<a class="btn btn-sm btn-primary"
										asp-controller="Home"
										asp-action="MyOrderDetails"
										asp-route-id="@o.Id">
										Details
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}
