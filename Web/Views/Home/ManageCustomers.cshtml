@{
    ViewData["Title"] = "Klantenbeheer";
}
<h2>Customer management</h2>
<div class="card p-3 mb-4">
    <h4>Add/Edit customer</h4>
    <form>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="custName">
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" id="custEmail">
        </div>
        <button type="button" class="btn btn-primary" onclick="sendToQueue('customer_update')">Save via RabbitMQ</button>
    </form>
</div>
