@{
	ViewData["Title"] = "Welcome to IT Business Coffee";
}

<!-- Hero / Top section -->
<div class="container py-5 rounded-2 hero-banner">
	<div class="row align-items-center g-4">
		<div class="col-lg-6">
			<h1 class="display-5 fw-bold">Welkom bij IT Business Coffee</h1>
			<p class="lead text-muted fw-semibold">
				Speciale koffie voor ontwikkelteams, naadloos geïntegreerd met een bestel pijplijn via MassTransit en RabbitMQ.
			</p>

			<div class="d-flex flex-wrap gap-2 mt-4">
				<a class="btn btn-success btn-lg px-4" href="/Orders/Create">
					Nieuwe bestelling
				</a>

				<a class="btn btn-outline-secondary btn-lg px-4" asp-controller="Home" asp-action="Dashboard">
					RabbitMQ dashboard1
				</a>
			</div>

			<div class="mt-4 small text-muted">
				Tip: Pauzeer consumenten om berichten langer te kunnen inspecteren in RabbitMQ.
			</div>
		</div>

		<div class="col-lg-6">
			<div class="card shadow-sm border-0 rounded-4">
				<div class="card-body p-4">
					<p class="mb-2 text-uppercase small text-muted">Voor ingenieurs & operationeel personeel.</p>
					<h5 class="fw-semibold mb-3">Hoe werkt het?</h5>

					<ol class="mb-0 text-muted">
						<li>Je vult het formulier in</li>
						<li>Controller publish’t <code>OrderSubmitted</code></li>
						<li>MassTransit stuurt naar RabbitMQ</li>
						<li>Consumer verwerkt de bestelling</li>
					</ol>
				</div>
			</div>

			<div class="row g-3 mt-3">
				<div class="col-6">
					<div class="card border-0 shadow-sm rounded-4">
						<div class="card-body p-3">
							<div class="fw-semibold">MassTransit</div>
							<div class="text-muted small">Messaging framework</div>
						</div>
					</div>
				</div>
				<div class="col-6">
					<div class="card border-0 shadow-sm rounded-4">
						<div class="card-body p-3">
							<div class="fw-semibold">RabbitMQ</div>
							<div class="text-muted small">Broker / queues</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	@Html.Raw(ViewBag.CustomScript)
</script>
