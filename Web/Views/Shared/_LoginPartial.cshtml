@using Microsoft.AspNetCore.Identity
@using Models.Entities

@inject SignInManager<CoffeeUser> SignInManager
@inject UserManager<CoffeeUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
	<li class="nav-item text-muted small">
		<p class="nav-link text-dark">Welkom @UserManager.GetUserName(User)!</p>
	</li>
	<li class="nav-item">
		<!-- "form-inline" is a class -->
		<form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
			<button id="logout" type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
		</form>
	</li>
} else {
	<li class="nav-item">
		<a class="btn btn-primary btn-sm" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
	</li>
	<li class="nav-item">
		<a class="btn btn-primary btn-sm" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
	</li>
}
