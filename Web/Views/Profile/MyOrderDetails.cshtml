@model OrderDTO
@{
    ViewData["Title"] = "Bestelling details";
}

<a asp-action="MyOrders" class="btn btn-link px-0">&larr; Terug</a>

<h2 class="mb-3">Bestelling details</h2>

<div class="card">
    <div class="card-body">
        <div><strong>OrderId:</strong> @Model.Id</div>
        <div><strong>Status:</strong> @Model.Status</div>
        <div><strong>Datum:</strong> @Model.CreatedAt</div>
        <div><strong>Email:</strong> @Model.CoffeeUser.Email</div>
        <div><strong>Klant:</strong> @Model.CoffeeUser.FirstName</div>

        @* <hr />
        <h5>Raw JSON</h5>
        <pre style="white-space: pre-wrap; word-break: break-word;">@Model.PayloadJson</pre> *@
    </div>
</div>
