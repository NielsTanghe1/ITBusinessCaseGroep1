@page
@model IndexModel
@{
	ViewData["Title"] = "Profiel";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="card">
	<div class="card-body">
		<form id="profile-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="row g-3">

				<!-- Identity section -->
				<div class="col-md-6">
					<label asp-for="Username" class="form-label">Gebruikersnaam</label>
					<input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
					<span class="text-danger" asp-validation-for="Username"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.FirstName" class="form-label">Voornaam</label>
					<input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name." />
					<span asp-validation-for="Input.FirstName" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.LastName" class="form-label">Achternaam</label>
					<input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name." />
					<span asp-validation-for="Input.LastName" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.Email" class="form-label">Email</label>
					<input asp-for="Input.Email" class="form-control" placeholder="Please enter your email." />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.PhoneNumber" class="form-label">Telefoonnummer</label>
					<input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
					<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
				</div>

				<!-- Address section -->
				<div class="col-md-6">
					<label asp-for="Input.AddressType" class="form-label">Type address</label>
					<select asp-for="Input.AddressType" class="form-control" asp-items="ViewBag.AddressTypes"></select>
					<span asp-validation-for="Input.AddressType" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.Street" class="form-label">Naam straat</label>
					<input asp-for="Input.Street" class="form-control" placeholder="Please enter the name of your street." />
					<span asp-validation-for="Input.Street" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.HouseNumber" class="form-label">Huisnummer</label>
					<input asp-for="Input.HouseNumber" class="form-control" placeholder="Please enter your housenumber." />
					<span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.City" class="form-label">Stad</label>
					<input asp-for="Input.City" class="form-control" placeholder="Please enter your city name." />
					<span asp-validation-for="Input.City" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.PostalCode" class="form-label">Postcode</label>
					<input asp-for="Input.PostalCode" class="form-control" placeholder="Please enter your postal code." />
					<span asp-validation-for="Input.PostalCode" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.CountryISO" class="form-label">Land ISO</label>
					<input asp-for="Input.CountryISO" class="form-control" placeholder="Please enter your country ISO." />
					<span asp-validation-for="Input.CountryISO" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Input.UnitNumber" class="form-label">Eenheid</label>
					<input asp-for="Input.UnitNumber" class="form-control" placeholder="Please enter your unit number." />
					<span asp-validation-for="Input.UnitNumber" class="text-danger"></span>
				</div>

				<button id="update-profile-button" type="submit" class="btn btn-primary mt-3">Opslaan</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
